{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "removeComments": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "experimentalDecorators": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
